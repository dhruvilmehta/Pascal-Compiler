// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Pascal Execute",
            "request": "launch",
            "mainClass": "Pascal",
            "classPaths": ["${workspaceFolder}/classes"],
            "args": ["execute", "-x", "declarations.pas"],
            "console": "integratedTerminal",
            "preLaunchTask": "compile"
        }
    ]
}
